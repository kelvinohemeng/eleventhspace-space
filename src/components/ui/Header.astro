---
import logoImage from "../../assets/logo.svg";
import { containerClass } from "../../lib/utils";
import { Link } from "../react/Link";
import { ArrowUpRight, Copyright } from "@phosphor-icons/react";
import { SplitTextAnim } from "../react/TextAnimations";

const containerClasses = containerClass(false);
---

<div class="fixed w-screen left-0 right-0 top-0 bg-white z-[99]">
  <nav
    class={`${containerClasses} flex justify-between items-center p-4 w-full`}
  >
    <div class="logo">
      <Link href="/">
        <img src={logoImage.src} alt="logo" />
      </Link>
    </div>
    <ul class="hidden md:flex items-center">
      <li>
        <Link href="/">Home</Link>
      </li>
      <li>
        <Link href="/about">About</Link>
      </li>
      <li>
        <Link href="/three">r3f test</Link>
      </li>
      <li>
        <Link href="/admin" target="_blank">admin</Link>
      </li>
    </ul>
    <div class="flex items-center gap-4">
      <Link href="/about" className="text-black flex items-center gap-2">
        <span
          class="w-9 bg-Red-e-red-500 aspect-square flex items-center justify-center rounded-full"
        >
          <ArrowUpRight color="white" width={18} height={18} /></span
        >
        <span class="text-lg font-helvetica font-medium">Let's Talk</span>
      </Link>
      <div class="space-y-2 z-[999]">
        <div class="w-[35px] h-1 bg-slate-600"></div>
        <div class="w-[35px] h-1 bg-slate-600"></div>
        <div class="w-[35px] h-1 bg-slate-600"></div>
      </div>

      <div
        class=" block md:hidden absolute top-0 right-0 w-full max-w-[500px] h-screen bg-slate-900 z-[999]"
      >
        <div class="p-8 pt-[80px] flex flex-col justify-between h-full">
          <div class="gap-12 flex flex-col">
            <Link href="/"><h3 class="text-white">Home</h3></Link>
            <Link href="/about"><h3 class="text-white">About</h3></Link>
            <Link href="/three"><h3 class="text-white">r3f test</h3></Link>
            <Link href="/admin" target="_blank"
              ><h3 class="text-white">admin</h3></Link
            >
          </div>
          <div class="space-y-6">
            <SplitTextAnim
              client:load
              text="eleventhspace"
              className="leading-[100%] font-helvetica font-[500] text-[#ffffff]"
              duration={1.5}
              wrapper="h1"
            />
            <div class="flex justify-between items-center text-white">
              <span class="flex items-center gap-2">
                <p>Copyright</p>
                <Copyright />
                <p>eleventhspace 2024</p></span
              >
              <p>Privacy Policy</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </nav>

  <style is:global>
    ul {
      list-style: none;
      display: flex;
      gap: 12px;
    }
  </style>
</div>
